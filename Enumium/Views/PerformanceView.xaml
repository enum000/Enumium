<UserControl x:Class="Enumium.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Enumium.Helpers">

    <UserControl.Resources>
        <helpers:ImpactToColorConverter x:Key="ImpactConv"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="28,24,28,0">
            <TextBlock Text="Performance Tweaks" Style="{StaticResource PageTitleStyle}"/>
            <TextBlock Text="Optimize your system for maximum performance" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Category Tabs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="28,16,28,0">
            <RadioButton Style="{StaticResource TabButtonStyle}" Content="System" IsChecked="True"
                         GroupName="PerfTabs"
                         Command="{Binding SelectCategoryCommand}" CommandParameter="System"/>
            <RadioButton Style="{StaticResource TabButtonStyle}" Content="Memory" Margin="4,0"
                         GroupName="PerfTabs"
                         Command="{Binding SelectCategoryCommand}" CommandParameter="Memory"/>
            <RadioButton Style="{StaticResource TabButtonStyle}" Content="Disk" Margin="4,0"
                         GroupName="PerfTabs"
                         Command="{Binding SelectCategoryCommand}" CommandParameter="Disk"/>
            <RadioButton Style="{StaticResource TabButtonStyle}" Content="Gaming" Margin="4,0"
                         GroupName="PerfTabs"
                         Command="{Binding SelectCategoryCommand}" CommandParameter="Gaming"/>
            <RadioButton Style="{StaticResource TabButtonStyle}" Content="FPS Boost" Margin="4,0"
                         GroupName="PerfTabs"
                         Command="{Binding SelectCategoryCommand}" CommandParameter="FPS Boost"/>
        </StackPanel>

        <!-- Tweaks List -->
        <ScrollViewer Grid.Row="2" Margin="28,16,28,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Tweak Info -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <!-- Impact Badge -->
                                        <Border Background="{Binding Impact, Converter={StaticResource ImpactConv}}"
                                                CornerRadius="4" Padding="8,2" Margin="10,0,0,0"
                                                Opacity="0.3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Impact}" FontSize="10" FontWeight="SemiBold"
                                                       Foreground="{Binding Impact, Converter={StaticResource ImpactConv}}"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" Style="{StaticResource BodyTextStyle}"
                                               TextWrapping="Wrap" MaxWidth="500" Margin="0,0,20,0"/>
                                </StackPanel>

                                <!-- Toggle -->
                                <CheckBox Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                          IsChecked="{Binding IsEnabled}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Action Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" Padding="28,12"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset All" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"
                            Command="{Binding ResetAllCommand}"/>
                    <Button Content="Apply Changes" Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ApplyAllCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
