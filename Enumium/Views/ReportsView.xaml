<UserControl x:Class="Enumium.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="28,24,28,0">
            <StackPanel>
                <TextBlock Text="Reports &amp; History" Style="{StaticResource PageTitleStyle}"/>
                <TextBlock Text="{Binding StatusText}" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ”„ Refresh" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"
                        Command="{Binding RefreshCommand}"/>
                <Button Content="ðŸ“Š Export CSV" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"
                        Command="{Binding ExportCsvCommand}"/>
                <Button Content="ðŸ—‘ï¸ Clear" Style="{StaticResource DangerButtonStyle}"
                        Command="{Binding ClearHistoryCommand}"/>
            </StackPanel>
        </Grid>

        <!-- History Timeline -->
        <ScrollViewer Grid.Row="1" Margin="28,16,28,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding History}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,6" Padding="14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Timestamp -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="120">
                                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                               FontFamily="{StaticResource MonoFont}">
                                        <TextBlock.Text>
                                            <Binding Path="Timestamp" StringFormat="{}{0:MMM dd, HH:mm}"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Details -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Action}" FontSize="13" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Background="{StaticResource SurfaceLightBrush}" CornerRadius="4"
                                                Padding="8,2" Margin="8,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Category}" FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Details}" Style="{StaticResource SmallTextStyle}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Success indicator -->
                                <TextBlock Grid.Column="3" FontSize="16" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âœ…"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Success}" Value="False">
                                                    <Setter Property="Text" Value="âŒ"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
