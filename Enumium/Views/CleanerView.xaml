<UserControl x:Class="Enumium.Views.CleanerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Enumium.Helpers">

    <UserControl.Resources>
        <helpers:FileSizeConverter x:Key="SizeConv"/>
        <helpers:BoolToVisibilityConverter x:Key="BoolVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="28,24,28,0">
            <StackPanel>
                <TextBlock Text="Junk Cleaner" Style="{StaticResource PageTitleStyle}"/>
                <TextBlock Text="{Binding StatusText}" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="ðŸ” Scan Now" Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ScanCommand}" MinWidth="120"/>
            </StackPanel>
        </Grid>

        <!-- Progress -->
        <TextBlock Grid.Row="0" Text="{Binding ScanProgress}" Style="{StaticResource SmallTextStyle}"
                   Margin="28,0,28,0" VerticalAlignment="Bottom"
                   Visibility="{Binding IsScanning, Converter={StaticResource BoolVis}}"/>

        <!-- Results -->
        <ScrollViewer Grid.Row="1" Margin="28,16,28,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Scanning indicator -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12"
                        Visibility="{Binding IsScanning, Converter={StaticResource BoolVis}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Scanning your system..." FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ScanProgress}" Style="{StaticResource BodyTextStyle}"
                                   HorizontalAlignment="Center" Margin="0,4,0,12"/>
                        <ProgressBar IsIndeterminate="True" Height="4" Width="300"
                                     Style="{StaticResource AccentProgressBarStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Results List -->
                <ItemsControl ItemsSource="{Binding ScanResults}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"/>

                                    <!-- Icon -->
                                    <TextBlock Grid.Column="1" Text="{Binding Icon}" FontSize="20"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Style="{StaticResource SmallTextStyle}">
                                            <TextBlock.Text>
                                                <Binding Path="FileCount" StringFormat="{}{0:N0} files"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Size -->
                                    <TextBlock Grid.Column="3" Text="{Binding Size, Converter={StaticResource SizeConv}}"
                                               FontSize="14" FontWeight="Bold" VerticalAlignment="Center"
                                               Foreground="{StaticResource SecondaryAccentBrush}" Margin="0,0,16,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="28,12"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Visibility="{Binding HasScanResults, Converter={StaticResource BoolVis}}">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total: " Style="{StaticResource BodyTextStyle}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalSize, Converter={StaticResource SizeConv}}"
                               FontSize="16" FontWeight="Bold" Foreground="{StaticResource WarningBrush}"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock VerticalAlignment="Center" Style="{StaticResource BodyTextStyle}">
                        <TextBlock.Text>
                            <Binding Path="TotalFiles" StringFormat="({0:N0} files)"/>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Select All" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"
                            Command="{Binding SelectAllCommand}"/>
                    <Button Content="ðŸ—‘ï¸ Clean Selected" Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding CleanCommand}" MinWidth="140"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
