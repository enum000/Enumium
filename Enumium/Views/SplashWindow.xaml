<Window x:Class="Enumium.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enumium" Height="520" Width="460"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Glow animation for the logo -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="LogoGlow" Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1.0" Duration="0:0:2"/>
        </Storyboard>

        <!-- Rotate animation for spinner -->
        <Storyboard x:Key="SpinnerAnim" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotate" Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:1.5"/>
        </Storyboard>

        <!-- Fade in for content -->
        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation Storyboard.TargetName="MainContent" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ContentSlide" Storyboard.TargetProperty="Y"
                             From="30" To="0" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Particles floating up -->
        <Storyboard x:Key="Particle1Anim" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1Move" Storyboard.TargetProperty="Y"
                             From="200" To="-200" Duration="0:0:6"/>
            <DoubleAnimation Storyboard.TargetName="Particle1" Storyboard.TargetProperty="Opacity"
                             From="0" To="0.6" Duration="0:0:1" AutoReverse="True"
                             RepeatBehavior="3x"/>
        </Storyboard>
        <Storyboard x:Key="Particle2Anim" RepeatBehavior="Forever" BeginTime="0:0:2">
            <DoubleAnimation Storyboard.TargetName="Particle2Move" Storyboard.TargetProperty="Y"
                             From="180" To="-180" Duration="0:0:5"/>
            <DoubleAnimation Storyboard.TargetName="Particle2" Storyboard.TargetProperty="Opacity"
                             From="0" To="0.5" Duration="0:0:0.8" AutoReverse="True"
                             RepeatBehavior="3x"/>
        </Storyboard>
        <Storyboard x:Key="Particle3Anim" RepeatBehavior="Forever" BeginTime="0:0:1">
            <DoubleAnimation Storyboard.TargetName="Particle3Move" Storyboard.TargetProperty="Y"
                             From="160" To="-160" Duration="0:0:7"/>
            <DoubleAnimation Storyboard.TargetName="Particle3" Storyboard.TargetProperty="Opacity"
                             From="0" To="0.4" Duration="0:0:1.2" AutoReverse="True"
                             RepeatBehavior="3x"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LogoPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource SpinnerAnim}"/>
            <BeginStoryboard Storyboard="{StaticResource FadeInContent}"/>
            <BeginStoryboard Storyboard="{StaticResource Particle1Anim}"/>
            <BeginStoryboard Storyboard="{StaticResource Particle2Anim}"/>
            <BeginStoryboard Storyboard="{StaticResource Particle3Anim}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="16" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#40735CFF" Offset="0"/>
                <GradientStop Color="#4000CEC9" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0A0A1A" Offset="0"/>
                <GradientStop Color="#FF0D0D2B" Offset="0.5"/>
                <GradientStop Color="#FF0A1628" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Floating particles -->
            <Canvas ClipToBounds="True">
                <Ellipse x:Name="Particle1" Width="4" Height="4" Fill="#6C5CE7" Opacity="0"
                         Canvas.Left="80" Canvas.Top="300">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle1Move"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse x:Name="Particle2" Width="3" Height="3" Fill="#00CEC9" Opacity="0"
                         Canvas.Left="300" Canvas.Top="350">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle2Move"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse x:Name="Particle3" Width="5" Height="5" Fill="#A29BFE" Opacity="0"
                         Canvas.Left="200" Canvas.Top="280">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle3Move"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Canvas>

            <StackPanel x:Name="MainContent" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0">
                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="ContentSlide" Y="30"/>
                </StackPanel.RenderTransform>

                <!-- Logo with glow -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,16">
                    <!-- Glow behind logo -->
                    <Ellipse x:Name="LogoGlow" Width="100" Height="100" Opacity="0.3">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#406C5CE7" Offset="0"/>
                                <GradientStop Color="#0000CEC9" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="â—†" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF6C5CE7" Offset="0"/>
                                <GradientStop Color="#FF00CEC9" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <!-- Title -->
                <TextBlock Text="ENUMIUM" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"
                           FontFamily="Segoe UI" Margin="0,0,0,4">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFE0E0FF" Offset="0"/>
                            <GradientStop Color="#FF00CEC9" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBlock x:Name="SubtitleText" Text="System Optimizer" FontSize="14"
                           Foreground="#80FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,40"
                           FontFamily="Segoe UI"/>

                <!-- Language Selection -->
                <TextBlock x:Name="ChooseLangText" Text="Choose Language" FontSize="13"
                           Foreground="#99FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,16"
                           FontFamily="Segoe UI"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <!-- English Button -->
                    <Border x:Name="EnglishBtn" CornerRadius="10" Cursor="Hand" Margin="0,0,12,0"
                            Width="160" Height="60" MouseLeftButtonDown="English_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#30FFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#25735CFF"/>
                                        <Setter Property="BorderBrush" Value="#60735CFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ‡¬ðŸ‡§" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="English" FontSize="15" FontWeight="SemiBold" Foreground="#EEEEFF"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="EN" FontSize="10" Foreground="#80FFFFFF" FontFamily="Segoe UI"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Russian Button -->
                    <Border x:Name="RussianBtn" CornerRadius="10" Cursor="Hand"
                            Width="160" Height="60" MouseLeftButtonDown="Russian_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#30FFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2500CEC9"/>
                                        <Setter Property="BorderBrush" Value="#6000CEC9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ‡·ðŸ‡º" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Ð ÑƒÑÑÐºÐ¸Ð¹" FontSize="15" FontWeight="SemiBold" Foreground="#EEEEFF"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="RU" FontSize="10" Foreground="#80FFFFFF" FontFamily="Segoe UI"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Loading Spinner (hidden until language selected) -->
                <StackPanel x:Name="LoadingPanel" Visibility="Collapsed" HorizontalAlignment="Center">
                    <Grid Width="32" Height="32" Margin="0,0,0,12">
                        <Ellipse Width="32" Height="32" Stroke="#20FFFFFF" StrokeThickness="3"/>
                        <Ellipse Width="32" Height="32" StrokeThickness="3" StrokeDashArray="1.5 3"
                                 StrokeDashCap="Round" RenderTransformOrigin="0.5,0.5">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#FF6C5CE7" Offset="0"/>
                                    <GradientStop Color="#FF00CEC9" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                    <TextBlock x:Name="LoadingText" Text="Initializing..." FontSize="12"
                               Foreground="#80FFFFFF" HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                </StackPanel>

                <!-- Version -->
                <TextBlock Text="v1.0.0" FontSize="11" Foreground="#40FFFFFF"
                           HorizontalAlignment="Center" Margin="0,20,0,0"
                           FontFamily="Segoe UI"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
