<UserControl x:Class="Enumium.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="28,24">
        <StackPanel HorizontalAlignment="Center" MaxWidth="600">
            <!-- Logo + Title Section -->
            <StackPanel HorizontalAlignment="Center" Margin="0,20,0,30">
                <!-- Animated Logo -->
                <Grid Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Ellipse Width="80" Height="80" Opacity="0.2">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#606C5CE7" Offset="0"/>
                                <GradientStop Color="#0000CEC9" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="â—†" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF6C5CE7" Offset="0"/>
                                <GradientStop Color="#FF00CEC9" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <TextBlock Text="{Binding Title}" FontSize="28" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"
                           FontFamily="{StaticResource PrimaryFont}"/>
                <TextBlock Text="{Binding Version}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
                <TextBlock Text="{Binding Description}" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,8,0,0" TextAlignment="Center"/>
            </StackPanel>

            <!-- Developer Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="{Binding DeveloperLabel}" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding DeveloperName}" FontSize="18" FontWeight="Bold" Margin="0,4,0,0">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF6C5CE7" Offset="0"/>
                                    <GradientStop Color="#FF00CEC9" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                    <Button Grid.Column="1" Content="GitHub" Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding OpenGitHubCommand}" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- GitHub URL -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16" Cursor="Hand"
                    MouseLeftButtonDown="GitHub_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE71B;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="{StaticResource SecondaryAccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="{Binding GitHubLabel}" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding GitHubUrl}" FontSize="13" Foreground="{StaticResource SecondaryAccentBrush}"
                                   FontFamily="{StaticResource MonoFont}" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Features -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{Binding FeaturesLabel}" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding FeaturesList}" FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}" LineHeight="22"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Built With -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE90F;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8" Foreground="{StaticResource PrimaryAccentBrush}"/>
                    <TextBlock Text="{Binding BuiltWith}" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <TextBlock Text="{Binding Rights}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,30" Opacity="0.6"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
